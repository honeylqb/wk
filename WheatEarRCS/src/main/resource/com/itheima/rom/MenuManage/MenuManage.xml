<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MenuManageInfo">
    <sql id="columnList">
        <include refid="BaseInfo.BaseColumnListForQuery"></include>
        menu_name menuName,
        menu_code menuCode,
        menu_icon menuIcon,
        menu_link menuLink,
        parent_id parentId,
        menu_permission menuPermission,
        menu_order menuOrder,
        menu_type menuType,
        is_enable isEnable
    </sql>



    <!-- 配置查询所有操作 -->
    <select id="findAll" resultType="Map" >
        select <include refid="columnList"></include>
             from sys_menu
        <where>
            is_delete = 0 
        </where>
        order by menu_order
    </select>

    <select id="MenuAllcount" resultType="int">
        select count(1) from sys_menu

        <where>
            is_delete = 0
        </where>
    </select>


    <!-- 查询父菜单 -->
    <select id="findParent" resultType="Map" >
        select <include refid="columnList"></include>
        from sys_menu
        <where>
            is_delete = 0
            and parent_id = “-1”
            and is_enable = 1
        </where>
        order by menu_order
    </select>

    <!-- 查询父菜单 -->
    <select id="findParentOrChild" resultType="Map" >
        select <include refid="columnList"></include>
        from sys_menu
        <where>
            is_delete = 0
            <if test="parentId != null and parentId !=''  ">
                and parent_id = #{parentId}
            </if>
            <if test="menuType != null and menuType !=''  ">
                and menu_type = #{menuType}
            </if>

            and is_enable = 1
        </where>
        order by menu_order
    </select>

    <!-- 查询导航栏 -->
    <select id="showNavigation" resultType="Map" >
        select <include refid="columnList"></include>
        from sys_menu
        <where>
            is_delete = 0
            and parent_id = #{parentId}
            and is_enable = 1
        </where>
        order by menu_order
    </select>



</mapper>